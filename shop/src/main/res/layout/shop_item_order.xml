<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_shop_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_no_shop"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:text="悸动(上饶广丰霞峰镇店)"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/iv_shop_logo"
            app:layout_constraintEnd_toStartOf="@+id/tv_right_arrow"
            app:layout_constraintTop_toTopOf="@+id/iv_shop_logo"/>

        <TextView
            android:id="@+id/tv_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#999999"
            android:background="@drawable/ic_right_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_status"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_shop_name"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="14sp"
            android:paddingStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_right_arrow"/>

        <TextView
            android:id="@+id/tv_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_tv_grey"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_shop_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_name"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:text="¥25.5"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_horizontal_items"
            app:layout_constraintBottom_toTopOf="@+id/tv_action_btn"
            app:layout_constraintVertical_weight="1"/>
        <TextView
            android:id="@+id/tv_action_btn"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:text="去评价"
            android:textColor="#333333"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_btn_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_price"
            app:layout_constraintBottom_toBottomOf="@+id/rv_horizontal_items"
            app:layout_constraintVertical_weight="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_horizontal_items"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@+id/tv_total_price"
            app:layout_constraintStart_toStartOf="@+id/iv_shop_logo"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>