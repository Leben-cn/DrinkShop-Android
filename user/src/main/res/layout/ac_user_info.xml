<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <com.leben.base.widget.titleBar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_backGround" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="5dp">

            <!-- 头像 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_avatar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:paddingHorizontal="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow_1"
                    style="@style/SettingArrowStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default_avatar"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 用户名 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_username"
                style="@style/SettingRowStyle">

                <TextView
                    style="@style/SettingLabelStyle"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow_2"
                    style="@style/SettingArrowStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/SettingValueStyle"
                    android:layout_height="wrap_content"
                    android:text="Leben"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 密码 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_password"
                style="@style/SettingRowStyle">

                <TextView
                    style="@style/SettingLabelStyle"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow_3"
                    style="@style/SettingArrowStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    style="@style/SettingValueStyle"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 手机号 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_phone"
                style="@style/SettingRowStyle">

                <TextView
                    style="@style/SettingLabelStyle"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow_4"
                    style="@style/SettingArrowStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/SettingValueStyle"
                    android:layout_height="wrap_content"
                    android:text="13409767364"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_4" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 注销账号 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_logout_account"
                style="@style/SettingRowStyle">

                <TextView
                    style="@style/SettingLabelStyle"
                    android:layout_height="wrap_content"
                    android:text="注销账号"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow_5"
                    style="@style/SettingArrowStyle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    style="@style/SettingValueStyle"
                    android:layout_height="wrap_content"
                    android:text="注销后无法恢复，请谨慎操作"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>